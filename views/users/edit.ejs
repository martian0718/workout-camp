<%- include("../partials/header") %>



<div class="row">

    <div style="width: 30%; margin: 25px auto">
        <h1>Edit Profile</h1>
        <form action="/users/<%=user._id%>/?_method=PUT" method="post">
            <div class="form-group">
                <label for="first-name">First Name</label>
                <input style = "display: inline-block;" id = "first-name" class="form-control" type="text" name="user[firstName]" value="<%=user.firstName%>">
            </div>
            <div class="form-group">
                <label for="last-name">Last Name</label>
                <input id="last-name" class="form-control" type="text" name="user[lastName]" value="<%=user.lastName%>">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input id = "email" class="form-control" type="email" name="user[email]" value="<%=user.email%>">
            </div>
            <div class = "form-group">
                <label for="profilePic">Profile Picture</label>
                <input class = "form-control" id = "profilePic" value = "<%=user.avatar%>" placeholder= "profile picture  url"  type="text" name = "user[avatar]">
            </div>
            <div class = "form-group">
                <label for="bio">Bio</label>
                <textarea class = "form-control" id = "bio" name="user[bio]" id="" cols="30" rows="10"><%=user.bio%></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/users/<%=user._id%>">Go Back</a>
    </div>
    
</div>

<%- include("../partials/footer") %>